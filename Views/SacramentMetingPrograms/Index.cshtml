                @Html.DisplayFor(modelItem => item.SacramentHymn.HymnID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntermediateHymn.HymnID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SacramentMeetingProgramID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SacramentMeetingProgramID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SacramentMeetingProgramID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
